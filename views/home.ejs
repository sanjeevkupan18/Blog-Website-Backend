<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Homepage</title>
    <style>
    body {
      background: #f8f9fa;
      font-family: "Poppins", sans-serif;
    }
    .blog-section {
      padding: 50px 0;
    }
    .card {
      border: none;
      border-radius: 16px;
      overflow: hidden;
      transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }
    .card-img-top {
      height: 180px;
      object-fit: contain;
    }
    .card-body h5 {
      font-weight: 600;
      font-size: 1.1rem;
    }
    .btn-primary {
      background-color: #6c63ff;
      border: none;
      border-radius: 10px;
      padding: 8px 16px;
      font-weight: 500;
    }
    .btn-primary:hover {
      background-color: #5548e2;
    }
  </style>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <div class="container blog-section">
    <h1 class="text-center mb-5">Latest Blogs</h1>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
      <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title mb-3"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">View</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

    <%- include("./partials/script") %>
  </body>
</html>
